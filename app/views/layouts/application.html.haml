!!! html
%html
  %head
    %title LightningTalkApp
    =stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          %ul.nav.navbar-nav.navbar-left
            %li=image_tag("lightning_bolt.png", class: 'lightning_bolt')

            %li
              %a.navbar-brand{:href => "#"}
                Lightning Talks
        .navbar-form
          %ul.nav.navbar-nav.navbar-right
            %li
              -if current_user
                =link_to 'Sign Out', sign_out_path, class: 'btn btn-default navbar-btn sign_out_button'

